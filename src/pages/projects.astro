---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
      title="Capify"
      img="/portfolio/logo.ico"
      desc="Made for managing the finances of households, collecting all in- and outcomes and visualizing the data."
      url="#"
      badge="WIP, Angular, Spring Boot"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
      title="Dating App 'Swiper'"
      img="/portfolio/post_img.webp"
      desc="A dating app, using swipe functionality to find the perfect match."
      url="#"
      badge="Angular, ASP.Net"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
      title="MBot Software"
      img="/portfolio/post_img.webp"
      desc="A software made to controll a small driving vehicle, a so called 'MBot'."
      url="#"
      badge="Python, Avalonia, Spring Boot"
  />
</BaseLayout>
